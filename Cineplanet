import java.util.ArrayList;
import java.util.Scanner;

class DataCineplanet {
    // Listas para los datos del cine
    static ArrayList<String> lugares = new ArrayList<>();
    static ArrayList<String> peliculas = new ArrayList<>();
    static ArrayList<String> horarios = new ArrayList<>();
    static ArrayList<String> dulces = new ArrayList<>();
    static ArrayList<String> canchitas = new ArrayList<>();

    // Método para inicializar los datos
    public static void inicializarDatos() {
        // Lugares
        lugares.add("Lima");
        lugares.add("Piura");
        lugares.add("Cusco");

        // Películas
        peliculas.add("Spider-Man: Across the Spider-Verse");
        peliculas.add("Avatar: The Way of Water");
        peliculas.add("Doctor Strange: Multiverse of Madness");

        // Horarios
        horarios.add("3:00 PM");
        horarios.add("6:00 PM");
        horarios.add("9:00 PM");

        // Dulces
        dulces.add("Canchita");
        dulces.add("Gaseosa");

        // Tipos de canchita
        canchitas.add("Mantequilla");
        canchitas.add("Dulce");
        canchitas.add("Salada");
    }
}

public class Cineplanet {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        // Inicializar datos
        DataCineplanet.inicializarDatos();

        // Selección de lugar
        System.out.println("Bienvenido a Cineplanet. Seleccione una ubicación:");
        for (int i = 0; i < DataCineplanet.lugares.size(); i++) {
            System.out.println((i + 1) + ". " + DataCineplanet.lugares.get(i));
        }
        System.out.print("Ingrese el número de la ubicación: ");
        int lugarSeleccionado = scanner.nextInt();

        // Selección de película
        System.out.println("\nPelículas disponibles:");
        for (int i = 0; i < DataCineplanet.peliculas.size(); i++) {
            System.out.println((i + 1) + ". " + DataCineplanet.peliculas.get(i));
        }
        System.out.print("Seleccione una película: ");
        int peliculaSeleccionada = scanner.nextInt();

        // Selección de horario
        System.out.println("\nHorarios disponibles:");
        for (int i = 0; i < DataCineplanet.horarios.size(); i++) {
            System.out.println((i + 1) + ". " + DataCineplanet.horarios.get(i));
        }
        System.out.print("Seleccione un horario: ");
        int horarioSeleccionado = scanner.nextInt();

        // Selección de asientos y precios
        System.out.print("\n¿Cuántos asientos desea?: ");
        int cantidadAsientos = scanner.nextInt();

        int precioGeneral = 20; // Precio adulto
        double precioReducido = precioGeneral / 2.0; // Precio reducido para niños y socios
        double total = 0;

        ArrayList<String> asientosSeleccionados = new ArrayList<>();
        for (int i = 0; i < cantidadAsientos; i++) {
            System.out.println("\nUsuario " + (i + 1));
            System.out.print("Seleccione el tipo de usuario (1. Adulto, 2. Niño, 3. Socio): ");
            int tipoUsuario = scanner.nextInt();

            switch (tipoUsuario) {
                case 1:
                    total += precioGeneral;
                    break;
                case 2:
                case 3:
                    total += precioReducido;
                    break;
                default:
                    System.out.println("Tipo de usuario inválido. Se cobrará como adulto.");
                    total += precioGeneral;
            }

            System.out.print("Seleccione su asiento (Ejemplo: A1, B3): ");
            asientosSeleccionados.add(scanner.next());
        }

        // Sección de dulces
        System.out.println("\nSección de dulces. Tenemos promoción:");
        for (int i = 0; i < DataCineplanet.dulces.size(); i++) {
            System.out.println((i + 1) + ". " + DataCineplanet.dulces.get(i));
        }
        System.out.print("Seleccione una opción: ");
        int dulceSeleccionado = scanner.nextInt();

        ArrayList<String> dulcesComprados = new ArrayList<>();
        if (dulceSeleccionado == 1) {
            System.out.println("\nTipos de Canchita:");
            for (int i = 0; i < DataCineplanet.canchitas.size(); i++) {
                System.out.println((i + 1) + ". " + DataCineplanet.canchitas.get(i));
            }
            System.out.print("Seleccione un tipo de canchita: ");
            int canchitaSeleccionada = scanner.nextInt();
            System.out.print("¿Cuántas canchitas desea?: ");
            int cantidadCanchitas = scanner.nextInt();
            dulcesComprados.add(DataCineplanet.canchitas.get(canchitaSeleccionada - 1) + " x" + cantidadCanchitas);
        }

        // Pagar o agregar más
        System.out.println("\n1. Pagar");
        System.out.println("2. Agregar más dulces");
        System.out.print("Seleccione una opción: ");
        int accionFinal = scanner.nextInt();

        if (accionFinal == 1) {
            System.out.println("\n--- Recibo ---");
            System.out.println("Lugar: " + DataCineplanet.lugares.get(lugarSeleccionado - 1));
            System.out.println("Película: " + DataCineplanet.peliculas.get(peliculaSeleccionada - 1));
            System.out.println("Horario: " + DataCineplanet.horarios.get(horarioSeleccionado - 1));
            System.out.println("Asientos: " + asientosSeleccionados);
            System.out.println("Total: S/" + total);
            System.out.println("Dulces: " + dulcesComprados);
            System.out.println("Gracias por su compra.");
        } else {
            System.out.println("Agregue más dulces y repita.");
        }
        scanner.close();
    }
}
